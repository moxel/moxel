#!/bin/bash
# Deploy web server to kube cluster.

if [ $1 = "dev" ]
then
    ./bin/use-moxel-dev
    cd web-server && make build && make push && make deploy
elif [ $1 = "prod" ]
then
    ./bin/use-moxel-prod
    cd web-server && make build && make push && make deploy
else
    echo "Unknown deployment environment $1"
fi
